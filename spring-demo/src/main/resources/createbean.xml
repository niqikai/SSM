<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 1. 构造器实例化(无参)，最标准，使用最多    -->
    <bean id="cat" class="com.demo.createbean.Cat"/>

    <!-- 2. 静态共产方法   -->
    <bean id="dog" class="com.demo.createbean.DogFactory"  factory-method="createInstance"/>

    <!--3. 实例工厂方法    -->
    <bean id="fishFactory" class="com.demo.createbean.FishFactory"/>
    <bean id="fish" factory-bean="fishFactory" factory-method="createInstance"/>

    <!--4. 实现FactoryBean接口实例化，可以集成框架使用    -->
    <bean id="farmer" class="com.demo.createbean.FarmerFactory" />
</beans>